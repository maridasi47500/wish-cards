<%= form_with(model: pic,html:{id:"pic-frm"}) do |form| %>
  <% if pic.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(pic.errors.count, "error") %> prohibited this pic from being saved:</h2>

      <ul>
        <% pic.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :filename, style: "display: block" %>
    <%= form.file_field :filename %>
  </div>
    <%= form.hidden_field :message_id %>
    <%= form.hidden_field :width %>
    <%= form.hidden_field :height %>


  <div>
    <%= form.submit %>
  </div>
<% end %>
