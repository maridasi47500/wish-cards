<div id="<%= dom_id message %>">
<style>
#move<%=message.id%> {
        <%if params[:controller] == "Ã¹essages" && params[:action] != "edit"%>
          display:none;
        <%end%>
                       height: 10px;
                                              width: 10px;
                                                                             position: absolute;
                                                                                                            top: 100%;
                                                                                                                                           left: 100%;
                                                                                                                                                                                                  background: green;
                                                                                                                                                                                                                                                               }
      .speaker,.mytext, #mybody<%=message.id%> {
        background:white;
        position:absolute;
      }
                                                                                                                                                                                                                                                           #mypic<%=message.id%>{

                                                                                                                                                                                                                                                               border:1px solid black;
                                                                                                                                                                                                                                                                 position:relative;
                                                                                                                                                                                                                                                                   width:<%=message.width%>px;
                                                                                                                                                                                                                                                                     height:<%=message.height%>px;
                                                                                                                                                                                                                                                                       }
                                                                                                                                                                                                                                                                   #mybody<%=message.id%> {
                                                                                                                                                                                                                                                                       position:absolute;
                                                                                                                                                                                                                                                                        left:<%=message.bodyx%>px;
                                                                                                                                                                                                                                                                          top:<%=message.bodyy%>px;
                                                                                                                                                                                                                                                                          }
                                                                                                                                                                                                                                                                      </style>

                                                                                                                                                                                                                                                                     <div id="mypic<%=message.id%>" >
    <span class="speaker"><%=message.sent_by%> (<%=message.user.email%>)</span>
    <% message.texts.each do |text|%>
      <div class="mytext" style="font-weight:<%=text.weight%>;color:<%=text.color%>;font-size:<%=text.size%>px;z-index:1000;position:absolute;top:<%=text.y%>px;left:<%=text.x%>px;background-color:<%=text.transparent ? "transparent" : text.fond%>;" id="<%= dom_id text %>">
              <%= text.content %>

        </div>
    <%end%>
                                                                                                                                                                                                                                                                          <div id="move<%=message.id%>">

                                                                                                                                                                                                                                                                                    </div>
                                                                                                                                                                                                                                                                                    <div id="mybody<%=message.id%>">
                                                                                                                                                                                                                                                                                         <%=message.body%>
                                                                                                                                                                                                                                                                                          </div>
                                                                                                                                                                                                                                                                                          <img  id="cettepic<%=message.id%>" src="<%=message.image ? "/uploads/"+message.image : "/mypic"%>" width="100%" height="100%" isMap />
                                                                                                                                                                                                                                                                                            </div>

                                                                                                                                      <a href="/messages/<%=message.id%>/edit">edit</a>
</div>
